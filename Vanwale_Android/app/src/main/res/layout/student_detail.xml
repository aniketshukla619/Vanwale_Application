<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/student_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape2"
            android:layout_centerHorizontal="true"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_image"
            android:id="@+id/name"
            android:layout_marginTop="20dp">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/name1"
                android:defaultFocusHighlightEnabled="true"
                android:hint="NAME"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/classid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/name">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:id="@+id/class_student"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:id="@+id/class_student1"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="CLASS"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:id="@+id/class_section"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/section1"
                    android:layout_marginTop="40dp"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="SECTION"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/age_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/classid"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:id="@+id/age"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="AGE"
                    android:id="@+id/age_student"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    android:layout_marginRight="15dp"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/roll_no"
                android:layout_marginTop="20dp"
                android:layout_weight="2">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:id="@+id/rollno_student"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="ROLL NO"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/school_name"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:layout_below="@+id/age_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/college_name"
                android:defaultFocusHighlightEnabled="true"
                android:hint="SCHOOL/COACHING NAME"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/school_name"
            >
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                >
            </android.support.v7.widget.AppCompatSpinner>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_date"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="START DATE"
                    android:id="@+id/start_date2"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/date_layout"
            >
        </android.support.v7.widget.AppCompatSpinner>
    </RelativeLayout>
</android.support.v7.widget.CardView>
